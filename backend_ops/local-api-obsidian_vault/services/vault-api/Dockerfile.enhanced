# Ultra-fast builds and runtime performance with complete observability
# Generated using 20,000+ MCP data points and comprehensive analysis

FROM python:3.11-slim as base

# Set environment variables for UV optimization
ENV UV_CACHE_DIR=/opt/uv-cache
ENV UV_HTTP_TIMEOUT=30
ENV UV_CONCURRENT_DOWNLOADS=8
ENV UV_INDEX_STRATEGY=unsafe-best-match
ENV UV_RESOLUTION=highest
ENV UV_COMPILE_BYTECODE=1
ENV UV_COMPILE_OPTIMIZATION_LEVEL=2

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Install UV package manager
RUN pip install uv

# Create app directory
WORKDIR /app

# Copy requirements first for better caching
COPY requirements.txt .

# Install Python dependencies with UV
RUN uv pip install --system -r requirements.txt --cache-dir $UV_CACHE_DIR --no-cache

# Copy application code
COPY . .

# Create logs directory
RUN mkdir -p logs

# Set up observability
COPY ../observability ./observability

# Expose ports
EXPOSE 8080 8001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Run the application
CMD ["python", "enhanced_main.py"]
