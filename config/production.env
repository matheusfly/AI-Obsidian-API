# Production Environment Variables
# Copy this to .env and update with your actual values

# API Keys
OBSIDIAN_API_KEY=your_obsidian_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
LANGSMITH_API_KEY=your_langsmith_api_key_here

# Database Passwords
REDIS_PASSWORD=your_secure_redis_password_here

# Prometheus Authentication
PROMETHEUS_PASSWORD=your_secure_prometheus_password_here

# Grafana Authentication
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_admin_password_here
GRAFANA_SECRET_KEY=your_grafana_secret_key_here

# SSL/TLS Certificates (for production HTTPS)
SSL_CERT_PATH=./config/nginx/ssl/cert.pem
SSL_KEY_PATH=./config/nginx/ssl/key.pem

# Monitoring
LOG_LEVEL=INFO
METRICS_ENABLED=true
TRACING_ENABLED=true

# Resource Limits
CHROMA_MEMORY_LIMIT=2G
REDIS_MEMORY_LIMIT=1G
PIPELINE_MEMORY_LIMIT=4G
PROMETHEUS_MEMORY_LIMIT=2G
GRAFANA_MEMORY_LIMIT=1G

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

